{
  "name": "recipe-scraper",
  "version": "1.0.0",
  "description": "Cloudflare Worker for scraping and indexing recipe data from URLs",
  "main": "worker.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "setup-kv": "node setup-kv.js",
    "test-kv": "node test-kv.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage"
  },
  "keywords": [
    "cloudflare-worker",
    "recipe",
    "scraper",
    "json-ld"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "wrangler": "^4.30.0",
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "jest-environment-miniflare": "^2.14.2",
    "@cloudflare/workers-types": "^4.20241127.0"
  },
  "dependencies": {
    "node-fetch": "^3.3.0"
  },
  "jest": {
    "testEnvironment": "jest-environment-miniflare",
    "testEnvironmentOptions": {
      "kvNamespaces": ["RECIPES_DB"]
    },
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "collectCoverageFrom": [
      "worker.js",
      "!test-*.js",
      "!setup-kv.js"
    ]
  }
}
