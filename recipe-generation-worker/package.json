    "test:ui": "vitest --ui",
    "lint": "eslint src tests",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@eslint/js": "^9.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "audit-ci": "^7.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4",
    "wrangler": "^4.32.0"
  }
}
