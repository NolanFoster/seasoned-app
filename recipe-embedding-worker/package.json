    "test:ui": "vitest --ui",
    "lint": "eslint src tests",
    "type-check": "tsc --noEmit"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20231218.0",
    "@eslint/js": "^9.0.0",
    "@vitest/coverage-v8": "^1.2.1",
    "audit-ci": "^7.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.2.1",
    "vitest-environment-miniflare": "^2.14.4",
    "wrangler": "^3.24.0"
  }
}
