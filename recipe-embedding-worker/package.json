{
  "name": "recipe-embedding-worker",
  "version": "1.0.0",
  "description": "Worker for generating recipe embeddings using AI",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --env preview",
    "deploy": "wrangler publish",
    "test": "vitest run",
