{
  "name": "recipe-worker",
  "version": "1.0.0",
  "description": "Recipe app backend with SQLite and image upload",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "setup": "node setup.js",
    "db:create": "wrangler d1 create recipe-db",
    "db:migrate": "wrangler d1 execute recipe-db --file=./schema.sql",
    "r2:create": "wrangler r2 bucket create recipe-images",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.28.1"
  },
  "keywords": [
    "cloudflare",
    "workers",
    "d1",
    "r2",
    "recipes",
    "sqlite"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "node-fetch": "^3.3.2"
  }
}
