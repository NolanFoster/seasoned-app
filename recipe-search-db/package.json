{
  "name": "recipe-search-db",
  "version": "1.0.0",
  "description": "Graph-based search database for recipes using Cloudflare D1",
  "main": "src/index.js",
  "scripts": {
    "setup": "node setup.js",
    "db:create": "wrangler d1 create recipe-search-db",
    "db:migrate": "wrangler d1 execute recipe-search-db --file=./schema.sql",
    "db:info": "wrangler d1 execute recipe-search-db --command=\"PRAGMA table_info(nodes);\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:example": "node test-example.js",
    "test:migration": "node test-migration.js",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy"
  },
  "keywords": [
    "recipe",
    "search",
    "graph",
    "database",
    "d1",
    "cloudflare",
    "sqlite"
  ],
  "author": "Recipe App Team",
  "license": "MIT",
  "dependencies": {
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "vitest": "^3.2.4",
    "wrangler": "^4.30.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
