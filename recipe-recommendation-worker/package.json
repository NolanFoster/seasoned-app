{
  "name": "recipe-recommendation-worker",
  "version": "1.0.0",
  "description": "Recipe recommendation worker using Cloudflare Workers AI (GPT-OSS-20B) based on location and date",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "deploy:staging": "wrangler deploy --env staging",
    "deploy:production": "wrangler deploy --env production",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "coverage": "vitest run --coverage",
    "logs": "wrangler tail",
    "logs:staging": "wrangler tail --env staging",
    "logs:production": "wrangler tail --env production",
    "analytics": "wrangler analytics",
    "metrics": "curl -X GET \"$(wrangler whoami --json | jq -r '.account_id')/workers/scripts/recipe-recommendation-worker/metrics\""
  },
  "keywords": [
    "cloudflare",
    "workers",
    "recipes",
    "recommendations",
    "ai",
    "llm",
    "gpt-oss",
    "observability",
    "metrics",
    "analytics",
    "monitoring"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240821.1",
    "@vitest/coverage-v8": "^3.2.4",
    "miniflare": "^3.20250718.1",
    "node-fetch": "^3.3.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.28.1"
  },
  "dependencies": {}
}
